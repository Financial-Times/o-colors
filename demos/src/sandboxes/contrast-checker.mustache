<div class="container">
	<div class="color-selectors">
		<label class="o-forms-field">
			<span class="o-forms-title">
				<span class="o-forms-title__main">Text / Foreground Colour</span>
			</span>

			<span class="o-forms-input o-forms-input--select">
					<select id="text-selector" multiple>
						{{#primary}}
							<option style="background-color: var(--o-colors--{{name}}" value="{{name}}" {{#baseText}}selected {{/baseText}}>{{name}}</option>
						{{/primary}}

						{{#secondary}}
							<option style="background-color: var(--o-colors--{{name}}" value={{name}}>{{name}}</option>
						{{/secondary}}

						{{#tertiary}}
							<option style="background-color: var(--o-colors--{{name}}" value={{name}}>{{name}}</option>
						{{/tertiary}}

						{{#b2c}}
							<option style="background-color: var(--o-colors--{{name}}" value={{name}}>{{name}}</option>
						{{/b2c}}

						{{#experimental}}
							<option style="background-color: var(--o-colors--{{name}}" value={{name}}>{{name}}</option>
						{{/experimental}}
				</select>
			</span>
		</label>

		<label class="o-forms-field">
			<span class="o-forms-title">
				<span class="o-forms-title__main">Background Colour</span>
			</span>

			<span class="o-forms-input o-forms-input--select">
					<select id="background-selector" multiple>
						{{#primary}}
							<option style="background-color: var(--o-colors--{{name}}" value="{{name}}" {{#baseBackground}}selected {{/baseBackground}}>{{name}}</option>
						{{/primary}}

						{{#secondary}}
							<option style="background-color: var(--o-colors--{{name}}" value={{name}}>{{name}}</option>
						{{/secondary}}

						{{#tertiary}}
							<option style="background-color: var(--o-colors--{{name}}" value={{name}}>{{name}}</option>
						{{/tertiary}}

						{{#b2c}}
							<option style="background-color: var(--o-colors--{{name}}" value={{name}}>{{name}}</option>
						{{/b2c}}

						{{#experimental}}
							<option style="background-color: var(--o-colors--{{name}}" value={{name}}>{{name}}</option>
						{{/experimental}}
				</select>
			</span>
		</label>
	</div>
	<div class="contrast-result">
		<div>
			<span class='contrast-ratio'></span>
			<span class="wcag-rating rating-result"></span>
		</div>
		<p class="rating-message rating-result"></p>
	</div>

