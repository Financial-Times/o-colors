<div class="container">
	<form class="color-selectors">
		<fieldset class="swatches swatches--foreground">
			<legend	class="o-forms-title__main">Foreground Colour</legend>
			<span class="o-forms-title__prompt">Palette</span>
			{{#primary}}
				<label title="{{name}}">
					<input type=radio name="foreground" style="background-color: var(--o-colors-{{name}})" value="{{name}}"  {{#baseText}}checked{{/baseText}}>
				</label>
			{{/primary}}
			<br>
			{{#secondary}}
				<label title="{{name}}">
					<input type=radio name="foreground" style="background-color: var(--o-colors-{{name}})" value="{{name}}">
				</label>
			{{/secondary}}
			<br>
			{{#tertiary}}
				<label title="{{name}}">
					<input type=radio name="foreground" style="background-color: var(--o-colors-{{name}})" value="{{name}}">
				</label>
			{{/tertiary}}
			<br>
			{{#experimental}}
				<label title="{{name}}">
					<input type=radio name="foreground" style="background-color: var(--o-colors-{{name}})" value="{{name}}">
				</label>
			{{/experimental}}
				<span class="o-forms-title__prompt">Tints</span>
			{{#tints}}
				{{#tint-levels}}
					<label title="{{name}}-{{.}}">
						<input type=radio name="foreground" style="background-color: var(--o-colors-{{name}}-{{.}})" value="{{name}}-{{.}}">
					</label>
				{{/tint-levels}}
				<br>
			{{/tints}}
			</details>
		</fieldset>

		<fieldset class="swatches swatches--background">
			<legend class="o-forms-title__main">Background Colour</legend>
			{{#primary}}
				<label title="{{name}}">
					<input type=radio name="background" style="background-color: var(--o-colors-{{name}})" value="{{name}}"  {{#baseBackground}}checked{{/baseBackground}}>
				</label>
			{{/primary}}
			<br>
			{{#secondary}}
				<label title="{{name}}">
					<input type=radio name="background" style="background-color: var(--o-colors-{{name}})" value="{{name}}">
				</label>
			{{/secondary}}
			<br>
			{{#tertiary}}
				<label title="{{name}}">
					<input type=radio name="background" style="background-color: var(--o-colors-{{name}})" value="{{name}}">
				</label>
			{{/tertiary}}
			<br>
			{{#experimental}}
				<label title="{{name}}">
					<input type=radio name="background" style="background-color: var(--o-colors-{{name}})" value="{{name}}">
				</label>
			{{/experimental}}
			{{#tints}}

				<br>
				{{#tint-levels}}
					<label title="{{name}}-{{.}}">
						<input type=radio name="background" style="background-color: var(--o-colors-{{name}}-{{.}})" value="{{name}}-{{.}}">
					</label>
				{{/tint-levels}}
			{{/tints}}
		</fieldset>
	</form>

	<div class="contrast-result">
		<div>
			<span class='contrast-ratio'></span>
			<span class="wcag-rating rating-result"></span>
		</div>
		<p class="rating-message rating-result"></p>
